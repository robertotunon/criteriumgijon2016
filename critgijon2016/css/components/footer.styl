/* ________________________ Footer ______________________________________ */
.sponsors
	margin 0 auto
	background-color secondary
	.section_header
		text-align center
		margin 0 auto 2rem
		.section_title
			font-weight 400
			font-size 1.25rem
			color white
			&:before
				content ''
				display block
				width 3rem
				height .15rem
				margin 0 auto 1rem
				background-color white
	ul
		list-style none
		padding 2rem 0
		justify-content center
		align-items center
		@media (max-width: 480px)
			justify-content space-between
		.sponsor
			color white
			margin 0 2.5rem 2rem
			flex-basis 12%
			@media (max-width: 480px)
				margin 0 auto 2rem
				flex-basis 48%
			figure
				width 100%
				max-width 7rem
				margin 0 auto
				@media (max-width: 480px)
					max-width 5rem
			&:first-child
				flex-basis 100%
				figure
					max-width 8rem
			&.blb
			&.factory-five
			&.atlas
			&.pic-astudio
			&.belmez-face-apparel
			&.amaro
			&.cachuli
				flex-basis 6%
				@media (max-width: 480px)
					flex-basis 48%
			&.columbus
				flex-basis 8%
				@media (max-width: 480px)
					flex-basis 48%
			&.cafe-paraiso
				flex-basis 5%
				@media (max-width: 480px)
					flex-basis 48%
	.tapa_down
		fill primary
.site_footer
	padding 2rem 0
	background-color primary
	.credits
		text-align center
		color white
		align-items center
		@media (max-width: 480px)
			text-align center
			justify-content center
	.credits_logo
		display block
		width 7rem
		height 7rem
		margin 0
		@media (max-width: 480px)
			order 1
			flex-basis 100%
			margin 0 auto 2rem
		a
			display block
			width 100%
			height 100%
			text-indent -9999px
			background url(../svg/critgijon_logo.svg) no-repeat center
	.santacat
		margin 0
		@media (max-width: 480px)
			order 2
			flex-basis 100%
			margin 0 auto 2rem !important
		a
			display block
			width 10rem
			height 6rem
			text-indent -9999px
			margin 0 auto
			background url(../svg/santacatalina_logo.svg) no-repeat center
	.credits_info
		font-weight 400
		font-size .85rem
		letter-spacing .05rem
		color white
		margin 0
		@media (max-width: 480px)
			order 3
			flex-basis 70%
		a
			color white